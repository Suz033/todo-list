<form action="/todos/{{ todo._id }}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">

    <div class="input-group-text">
      <input type="checkbox" name="isDone" {{#if todo.isDone}} checked {{/if}} class="form-check-input mt-0">
    </div>

    <input type="text" placeholder="name" name="name" value="{{ todo.name }}" class="form-control">

    <button type="submit" class="btn btn-success">Save</button>

  </div>
</form>